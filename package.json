{
  "name": "tc39-weakrefs-shim",
  "version": "0.0.1",
  "description": "Shim for TC39 Weakrefs proposal",
  "module": "module/index.js",
  "scripts": {
    "build": "tsc -b tsconfig.dist.json",
    "clean": "rimraf dist lib module coverage tmp-jsshell",
    "test:browser": "karma start",
    "test:browser:watch": "karma start --no-single-run",
    "test:browser:debug": "karma start --debug",
    "test:node": "node --expose-gc -r esm -r ./tests/setup.node node_modules/mocha/bin/_mocha --opts ./mocha.opts",
    "test:jsshell": "trap 'exit 0' INT; tsc -p tests/setup/spidermonkey/tsconfig.json && cd ./tmp-jsshell/tests/setup/spidermonkey/ && `node ../../setup.spidermonkey.js` index.js",
    "posttest:jsshell": "rimraf tmp-jsshell",
    "test": "npm run test:fmt && npm run clean && npm run build && npm run test:node && npm run test:jsshell && npm run test:browser",
    "fmt": "prettier --write ./*.{js,ts,md,json,html} ./{src,docs,tests}/**/*.{js,ts,md,json,html}",
    "test:fmt": "prettier -l ./*.{js,ts,md,json,html} ./{src,docs,tests}/**/*.{js,ts,md,json,html}"
  },
  "files": [
    "dist",
    "module",
    "typings/tc39-weakrefs"
  ],
  "keywords": [
    "WeakRef",
    "FinalizationGroup",
    "ECMAScript",
    "tc39"
  ],
  "author": {
    "name": "Mathieu Hofman"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mhofman/tc39-weakrefs-shim.git"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-spies": "^1.0.0",
    "@types/mocha": "^5.2.6",
    "app-root-path": "^2.2.1",
    "bin-wrapper": "^4.1.0",
    "chai": "4.2.0",
    "chai-spies": "^1.0.0",
    "conditional-type-checks": "^1.0.0",
    "esm": "^3.2.22",
    "karma": "^4.1.0",
    "karma-chai": "0.1.0",
    "karma-chai-spies": "^0.1.4",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-instrumenter": "^1.0.1",
    "karma-coverage-istanbul-reporter": "^2.0.5",
    "karma-mocha": "1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-typescript": "^4.0.0",
    "mocha": "^6.1.4",
    "prettier": "1.17.0",
    "rimraf": "^2.6.3",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.3"
  },
  "dependencies": {
    "weak-napi": "^1.0.3"
  }
}
