{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "sourceMap": true,
    "outDir": "./tmp-out/",
    "noEmit": true,
    "allowJs": false,
    "typeRoots": ["./node_modules/@types", "./typings"],
    "types": [],
    "moduleResolution": "classic"
  },
  "include": ["src", "tests"],
  "exclude": ["tests/setup", "tests/setup.*.js"],
  "compileOnSave": true
}
